    {
      "name": "Student - Submit Application",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "Authorization",
            "value": "Bearer {{student_token}}"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"personalDetails\": {\n    \"fullName\": \"John Doe\",\n    \"fatherName\": \"Robert Doe\",\n    \"motherName\": \"Mary Doe\",\n    \"guardianPhone\": \"9876543211\",\n    \"nationality\": \"Indian\",\n    \"category\": \"General\"\n  },\n  \"academicDetails\": {\n    \"tenth\": {\n      \"board\": \"CBSE\",\n      \"school\": \"ABC School\",\n      \"passingYear\": 2018,\n      \"percentage\": 85.5\n    },\n    \"twelfth\": {\n      \"board\": \"CBSE\",\n      \"school\": \"XYZ College\",\n      \"passingYear\": 2020,\n      \"percentage\": 78.2\n    },\n    \"entranceExam\": {\n      \"name\": \"JEE\",\n      \"rollNumber\": \"JEE20231234\",\n      \"score\": 145,\n      \"rank\": 15000\n    }\n  },\n  \"coursePreferences\": {\n    \"firstChoice\": \"Computer Science\",\n    \"secondChoice\": \"Information Technology\",\n    \"thirdChoice\": \"Electronics & Communication\"\n  }\n}"
        },
        "url": "http://localhost:5000/api/applications"
      }
    },
    {
      "name": "Student - Upload Document",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{student_token}}"
          }
        ],
        "body": {
          "mode": "formdata",
          "formdata": [
            {
              "key": "documentType",
              "value": "marksheet_10th",
              "type": "text"
            },
            {
              "key": "file",
              "type": "file",
              "src": "/path/to/marksheet.pdf"
            }
          ]
        },
        "url": "http://localhost:5000/api/applications/{{application_id}}/documents"
      }
    },
    {
      "name": "Student - Get Dashboard",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{student_token}}"
          }
        ],
        "url": "http://localhost:5000/api/users/dashboard"
      }
    },
    {
      "name": "Admin - Get All Applications",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{admin_token}}"
          }
        ],
        "url": "http://localhost:5000/api/admin/applications"
      }
    },
    {
      "name": "Admin - Update Application Status",
      "request": {
        "method": "PUT",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "Authorization",
            "value": "Bearer {{admin_token}}"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"status\": \"approved\",\n  \"remarks\": \"Excellent academic record\"\n}"
        },
        "url": "http://localhost:5000/api/admin/applications/{{application_id}}/status"
      }
    },
    {
      "name": "Admin - Get Dashboard Stats",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{admin_token}}"
          }
        ],
        "url": "http://localhost:5000/api/admin/dashboard"
      }
    }
